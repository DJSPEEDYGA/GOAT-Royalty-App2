{
  "name": "super-ninja-ai",
  "version": "1.0.0",
  "description": "SuperNinja AI - Autonomous AI Desktop Assistant",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:linux": "electron-builder --linux --x64",
    "build:portable": "electron-builder --win portable",
    "build:all": "electron-builder --win --mac --linux"
  },
  "build": {
    "appId": "com.goatroyalty.superninja",
    "productName": "SuperNinja AI",
    "copyright": "Copyright 2025 Harvey Miller (DJ Speedy)",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!.github/**",
      "!build.sh",
      "!README.md"
    ],
    "publish": null,
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ],
      "icon": "assets/icon.png",
      "artifactName": "SuperNinja-AI-${version}-Setup.${ext}"
    },
    "mac": {
      "target": [
        { "target": "dmg", "arch": ["x64"] },
        { "target": "zip", "arch": ["x64", "arm64"] }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.productivity",
      "artifactName": "SuperNinja-AI-${version}.${ext}"
    },
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] }
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "artifactName": "SuperNinja-AI-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SuperNinja AI"
    },
    "portable": {
      "artifactName": "SuperNinja-AI-${version}-Portable.${ext}"
    },
    "dmg": {
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DJSPEEDYGA/GOAT-Royalty-App2.git"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "cheerio": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.0"
  },
  "author": {
    "name": "Harvey Miller (DJ Speedy)",
    "email": "djspeedyga@gmail.com"
  },
  "license": "MIT"
}