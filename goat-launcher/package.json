{
  "name": "goat-royalty-launcher",
  "version": "3.0.0",
  "description": "GOAT Royalty Ultimate Launcher — All Tools, All Platforms",
  "main": "src/main.js",
  "author": {
    "name": "Harvey Miller (DJ Speedy)",
    "email": "djspeedyga@gmail.com"
  },
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "dependencies": {
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DJSPEEDYGA/GOAT-Royalty-App2.git"
  },
  "build": {
    "appId": "com.goatroyalty.launcher",
    "productName": "GOAT Royalty",
    "copyright": "Copyright © 2025 Harvey Miller (DJ Speedy) — GOAT Royalty",
    "artifactName": "GOAT-Royalty-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "build/icon.png",
      "darkModeSupport": true,
      "target": [
        { "target": "zip", "arch": ["x64", "arm64"] }
      ]
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Audio",
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GOAT Royalty"
    },
    "publish": null
  }
}